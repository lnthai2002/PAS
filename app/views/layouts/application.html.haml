!!! 5

%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'PAS'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'PAS'}"}
    = stylesheet_link_tag "application"
    -# Foundation 5 won't work with Rails Turbolinks
    -# Modernizr is required for Zurb Foundation
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    .off-canvas-wrap
      .inner-wrap
        = render :partial=>'navigation'

        %section.main-section
          = render 'messages'
          = content_for?(:content) ? yield(:content) : yield

        %a.exit-off-canvas
    -# Foundation 5 won't work when application.js is included in HEAD
    = javascript_include_tag "application"